{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // Ativa verificações úteis
    "strict": true,
    "strictPropertyInitialization": false,   // Corrige os erros TS2564
    "noImplicitAny": false,                 // Corrige os erros TS7006
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
